# Environment
NODE_ENV=production
PORT=3002

# Database Configuration (AWS RDS recomendado)
DB_DIALECT=mysql
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=3306
DB_NAME=posts_prod_db
DB_USER=posts_user
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_HERE_MAKE_IT_VERY_LONG_AND_COMPLEX

# Cloudinary Configuration (File Uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn

# File Upload Limits
MAX_FILE_SIZE=100
MAX_FILES_COUNT=10

# Messaging Service Configuration
MESSAGING_SERVICE_URL=http://your-messaging-service-url/api/v1

